{% extends 'base.html.twig' %}

{% block title %}Participants{% endblock %}

{% block body %}
    <h1>Participants</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ participant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ participant.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ participant.firstname }}</td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ participant.contact }}</td>
            </tr>
            <tr>
                <th>Rgpd</th>
                <td>{{ participant.rgpd ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ participant.score }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_a_p_i_index') }}">back to list</a>

    <a href="{{ path('app_a_p_i_edit', {'id': participant.id}) }}">edit</a>

    {{ include('api/_delete_form.html.twig') }}
{% endblock %}
