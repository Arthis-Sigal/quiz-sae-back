{% extends 'base.html.twig' %}

{% block title %}Participants index{% endblock %}

{% block body %}
    <h1>Participants index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>Contact</th>
                <th>Rgpd</th>
                <th>Score</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.name }}</td>
                <td>{{ participant.firstname }}</td>
                <td>{{ participant.contact }}</td>
                <td>{{ participant.rgpd ? 'Yes' : 'No' }}</td>
                <td>{{ participant.score }}</td>
                <td>
                    <a href="{{ path('app_a_p_i_show', {'id': participant.id}) }}">show</a>
                    <a href="{{ path('app_a_p_i_edit', {'id': participant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_a_p_i_new') }}">Create new</a>
{% endblock %}
